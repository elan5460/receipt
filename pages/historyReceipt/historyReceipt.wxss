/* pages/historyReceipt/historyReceipt.wxss */

.white-card-column{
    display: flex;
    flex-direction: column;
    width: 690rpx;
}

.white-card-row{
    display: flex;
    flex-direction: row;
    width: 690rpx;
    padding: 0;
}

.btn-box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 160rpx;
}

.row{
    width: 100%;
    justify-content: space-between;
}

.margin-bar{
    /*分割空间*/
    box-sizing: border-box;
    width: 100%;
    height: 10rpx;
}

.receiptTitle{
    /*todo 宽度问题*/
    width: 600rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}