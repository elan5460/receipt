/* pages/historyReceipt/historyReceipt.wxss */

.white-card-column{
    display: flex;
    flex-direction: column;
    width: 690rpx;
    padding: 30rpx;
    color: black;
    border-radius: 16rpx;
    background: white;
    box-sizing: border-box;
    position: relative;
}

.white-card-row{
    display: flex;
    flex-direction: row;
    width: 690rpx;
    padding: 0;
    border-radius: 16rpx;
    background: white;
    box-sizing: border-box;
}

.btn-box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 100rpx;
}

.row{
    width: 100%;
    justify-content: space-between;
}

.margin-bar{
    /*分割空间*/
    box-sizing: border-box;
    width: 100%;
    height: 10rpx;
}

.receiptTitle{
    /*todo 宽度问题*/
    width: 480rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.status-badge{
    /*todo 宽度问题*/
    position: absolute;
    box-sizing: border-box;
    padding: 3rpx 6rpx;
    border-radius: 4rpx;
    width: auto;
    height: 32rpx;
    display: flex;
    text-align: center;
    justify-content: center;
    align-items: center;
    top: 34rpx;
    right: 30rpx;
}

.triangle-icon{
    width: 40rpx;
    height: 40rpx;
}